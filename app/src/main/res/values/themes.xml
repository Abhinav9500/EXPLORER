<resources>
    <!-- Base application theme. -->
    <style name="Theme.EXPLORER" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- old one was for action bar      "Theme.MaterialComponents.DayNight.NoActionBar"     -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color.  old one was like      "?attr/colorPrimaryVariant"    -->
        <item name="android:statusBarColor">@color/offcyancolor</item>

    </style>



    <style name="navigationdrawerbackground">
        <item name="background">@color/cyancolor</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">
        <!-- non selected colors -->
        <item name="colorControlNormal">@color/black</item>

        <!-- selected colors -->
        <item name="colorControlActivated">@color/dialog1</item>

    </style>

    <style name="ShareDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
</resources>